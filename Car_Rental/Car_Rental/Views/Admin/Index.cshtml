@model IEnumerable<Car_Rental.Models.Admin>
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Авторизация</title>
    <style>
        body {
            background: url(images/background.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f0f0;
            margin: 0;
        }

        .container {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form {
            display: flex;
            flex-direction: column;
        }

            .form-input {
                margin-bottom: 10px;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 3px;
            }

            .form-button {
                padding: 10px;
                border: none;
                border-radius: 3px;
            background-color: #454142;
                color: white;
                font-size: 16px;
                cursor: pointer;
            }

                .form-button:hover {
                background-color: #454142;
                }
}

        
    </style>
    
</head>
<body>
    <div class="container">
            <form method = "post" action="/Admin/Login">  
                <h2>Авторизация</h2>
                <label> Введите имя пользователя
                <p><input type = "text" class="form-input" name="username">
                    </p>
            </label>
            <label> Введите пароль
                <p><input type = "password" class="form-input" name="password">
                    </p>
            </label>

                <button type="submit"  class="form-button">Войти</button>
                </form>
    </div>
</body>
</html>