@model Car_Rental.Models.Customer

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Создать пользователя</title>
    <style>
        body {
            background: url(images/background.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            font-family: Arial, sans-serif;
            background-color: gray;
            padding: 20px;
        }

        .container {
            max-width: 600px;
            margin: auto;
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h4 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

        .form-control {
            width:97%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        .btn-primary {
            background-color: #454142;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #454142;
            }

        .back-to-list {
            display: block;
            margin-top: 20px;
            text-align: center;
            color: #454142;
            text-decoration: none;
        }

            .back-to-list:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h4>Создать клиента</h4>
        <hr />
                <form method = "post" asp-controller="Customer">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Введите фамилию</label>
                        <input class="form-control" name="lastName"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Введите имя</label>
                        <input  class="form-control" name = "firstName" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Введите отчество</label>
                        <input  class="form-control" name = "middleName" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Введите номер телефона</label>
                        <input class="form-control" name="phone"/>
                    </div>
                    <div class="form-group">
                <label class="control-label">Есть ли активная аренда?</label>
                <label class="control-label">Да&nbsp;Нет </label>
                    <input type="radio" name ="activeRent" value="true"/>
                    <input type="radio" name="activeRent" value="false" />
                    </div>
                    <button class="btn-primary" onclick="window.location.href='@Url.Action("Create", "Customers")'">Создать</button>
                </form>
        <a href="@Url.Action("Index", "Customers")" >Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
