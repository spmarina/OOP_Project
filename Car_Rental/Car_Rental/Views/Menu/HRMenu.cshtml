@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Выбор функции</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: gray;
            padding: 20px;
        }

        .container {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .option {
            padding: 10px;
            margin: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
            cursor: pointer;
            background-color: #007bff;
            color: white;
            font-size: 18px;
            text-decoration: none;
            display: block;
        }

            .option:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <a href="@Url.Action("db", "Admin")" class="option">Администраторы</a>
    </div>
</body>
</html>