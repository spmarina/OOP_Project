@model Car_Rental.Models.Discount

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Customer</title>
    <style>
        body {
            background: url(images/background);
            background-repeat: no-repeat;
            background-size: cover;
            font-family: Arial, sans-serif;
            background-color: gray;
            padding: 20px;
        }

        .container {
            max-width: 600px;
            margin: auto;
            background: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h4 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

        .form-control {
            width: 97%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #454142;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #454142;
            }

        .back-to-list {
            display: block;
            margin-top: 20px;
            text-align: center;
            color: #454142;
            text-decoration: none;
        }

            .back-to-list:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h4>Создать информацию о сервисном обслуживании</h4>
        <hr />
        <form method="post" action="Create">
            <div class="form-group">
                <label class="control-label">Введите ID машины</label>
                <input type = "number"class="form-control" name="cars_ID" />
            </div>
            <div class="form-group">
                <label class="control-label">Введите дату предыдущего сервисного обслуживания</label>
                <input type="date" class="form-control" name="PreviousDate" />
            </div>
            <div class="form-group">
                <label class="control-label">Введите дату следующего сервисного обслуживания</label>
                <input type="date" class="form-control" name="NextDate" />
            </div>
            <button type="submit" class="btn-primary">Создать</button>
        </form>
        <a href="@Url.Action("Index", "Service")">Вернуться к списку</a>
    </div>
</body>
</html>
