@model IEnumerable<Car_Rental.Models.Card>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customers_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cashback)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customers_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cashback)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cards_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Cards_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Cards_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
