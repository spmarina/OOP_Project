@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Выбор функции</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: gray;
            padding: 20px;
        }

        .container {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .option {
            padding: 10px;
            margin: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
            cursor: pointer;
            background-color: #454142;
            color: white;
            font-size: 18px;
            text-decoration: none;
            display: block;
        }

            .option:hover {
                background-color: #454142;
            }

        .create-button {
            text-align: center;
            display: inline-block;
            padding: 5px 10px;
            background-color: #454142;
            color: white;
            border-radius: 5px;
            margin-top: 20px;
            margin-bottom: 20px;
            text-decoration: none;
            position: absolute;
            font-size: 2vw;
            right: 5%;
            top: 2%;
            width: 100px;
            height: 40px;
        }
    </style>
</head>
<body>
    <a class=" create-button" href="@Url.Action("Logout", "Menu")">Выйти</a>
    <div class="container">
        <a href="@Url.Action("db", "Admin")" class="option">Администраторы</a>
    </div>
</body>
</html>