@model IEnumerable<Car_Rental.Models.Admin>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Администраторы</title>
    <style>

        body {
            background: url(images/background.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            font-family: Arial, sans-serif;
            background-color: gray;
            margin: 0;
            padding: 20px;
        }

 
        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: white;
        }

        .table {
            width: 100%;
            border: 1px solid black;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .table th, .table td {
                border: 1px solid black;
                color: black;
                padding: 12px;
                text-align: center;
                background-color: #f2f2f2;
            }

            .table th {
                border: 1px solid black;
                background-color: #454142;
                color: white;
            }



        .create-button {
            text-align: center;
            display: inline-block;
            padding: 5px 10px;
            background-color: #454142;
            color: white;
            border-radius: 5px;
            margin-bottom: 20px;
            text-decoration: none;
        }

            .create-button:hover {
                background-color: #454142;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Администраторы </h1>
        <p>
            <a class="create-button" href='@Url.Action("Register", "Admin")'>Создать нового</a>
            <a class="create-button" href='@Url.Action("HRMenu", "Menu")'>Назад</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Login</th>
                    <th>Password</th>
                    <th>Sales</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Admins_ID)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreateLogin)</td>
                        <td>@Html.DisplayFor(modelItem => item.CreatePassword)</td>
                        <td>@Html.DisplayFor(modelItem => item.Sales)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
